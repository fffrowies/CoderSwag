<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="150dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" tools:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryImage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:contentDescription="@string/background_image" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/categoryImage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textColor="@android:color/white"
            android:textStyle="bold" tools:text="HATS"/>
</android.support.constraint.ConstraintLayout>